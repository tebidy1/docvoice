{
    "name": "ScribeFlow AI Scribe",
    "description": "AI-Powered Medical Documentation Assistant",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "ScribeFlow",
        "default_icon": "icons/Icon-192.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/Icon-192.png",
        "48": "icons/Icon-192.png",
        "128": "icons/Icon-192.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}