{
    "name": "ScribeFlow AI Scribe",
    "description": "AI-Powered Medical Documentation Assistant",
    "version": "1.0.1",
    "manifest_version": 3,
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "microphone"
    ],
    "host_permissions": [
        "https://docvoice.gumra-ai.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "Open ScribeFlow",
        "default_icon": {
            "16": "icons/Icon-192.png",
            "48": "icons/Icon-192.png",
            "128": "icons/Icon-192.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "icons": {
        "16": "icons/Icon-192.png",
        "48": "icons/Icon-192.png",
        "128": "icons/Icon-512.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "assets/*",
                "canvaskit/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}