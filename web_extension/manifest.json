{
    "name": "ScribeFlow AI Scribe",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "AI-Powered Medical Documentation Workspace",
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://api.groq.com https://generativelanguage.googleapis.com https://docvoice.gumra-ai.com https://fonts.gstatic.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "flutter.js",
                "main.dart.js",
                "manifest.json",
                ".env",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/Icon-192.png",
        "48": "icons/Icon-192.png",
        "128": "icons/Icon-192.png"
    }
}